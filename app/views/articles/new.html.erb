<h1>Create a New Article</h1>

<% if @article.errors.any? %>
  <h2>Following errors prevented the article to save</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>  
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
    <p>
      <%= f.label :author %><br/>
      <%= f.text_field :author %>
    </p>
  <p>
    <%= f.submit %>
  </p>
<%end%>

<h3><%= button_to 'Go To Article Listing Page', articles_path(@article), method: :get %></h3>