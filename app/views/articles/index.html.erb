<h1>Article Listing Page</h1>

<table>
<thead>
  <tr>
    <th> Title</th>
    <th>Description</th>
    <th>Author</th>
    <th colspan='3'>Actions</th>
  </tr>
</thead>
<tbody>
<% @articles.each do |article| %>
 <tr>
  <td><%= article.title %></td>
  <td><%= article.description %></td>
  <td><%= article.author %></td>
  <td><%= link_to 'Edit', edit_article_path(article), method: :create %></td>
  <td><%= link_to 'Show', article_path(article) %></td>
  <td><%= link_to 'Delete', article_path(article), data: {
    turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
 </tr>
 <% end %>
</tbody>
</table>

<h3><%= button_to 'New Article', new_article_path(@article), method: :get %></h3>
<h2><%= link_to 'Home page', root_path %></h2>